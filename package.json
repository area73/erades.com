{
  "name": "erades-com",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "astro dev",
    "build": "pnpm run build:flexsearch && astro build",
    "build:flexsearch": "tsx scripts/generate-flexsearch-index.ts",
    "preview": "astro preview",
    "astro": "astro",
    "coverage": "vitest run --coverage",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --max-warnings=0 --fix",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "translate:es-en": "dotenv -e .env -- tsx scripts/translate-posts.ts es en",
    "translate:en-es": "dotenv -e .env -- tsx scripts/translate-posts.ts en es",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:playwright:base": "docker run --rm -i -v $PWD:$PWD -w $PWD --shm-size=2g mcr.microsoft.com/playwright:v1.54.1-jammy bash -lc",
    "docker:test:visual": "pnpm run docker:playwright:base \"corepack enable && pnpm install --frozen-lockfile && playwright test tests/visual-regression/\"",
    "docker:test:visual:update": "pnpm run docker:playwright:base \"corepack enable && pnpm install --frozen-lockfile && playwright test tests/visual-regression/ --update-snapshots\"",
    "docker:test:e2e": "pnpm run docker:playwright:base \"corepack enable && pnpm install --frozen-lockfile && playwright test tests/e2e/\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/node": "^9.3.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.3.1",
    "@lucide/astro": "^0.525.0",
    "@swup/astro": "^1.7.0",
    "@tailwindcss/vite": "^4.1.5",
    "astro": "^5.7.10",
    "astro-expressive-code": "^0.41.2",
    "flexsearch": "^0.8.205",
    "gray-matter": "^4.0.3",
    "openai": "^5.9.0",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4.1.5",
    "@tailwindcss/typography": "0.5.0-alpha.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "astro-eslint-parser": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-astro": "^1.3.1",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.5",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "vitest": "^3.1.3"
  }
}
