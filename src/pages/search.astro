---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SearchPageWrapper from "../components/SearchPageWrapper.tsx";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Search | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-background text-foreground min-h-screen">
    <Header />
    <main class="max-w-[1200px] mx-auto pt-8 transition-main">
      <section>
        <SearchPageWrapper client:only="react" />
      </section>
    </main>
  </body>
</html>
