---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  datetime={date instanceof Date && !isNaN(date.getTime())
    ? date.toISOString()
    : undefined}
>
  {
    date instanceof Date && !isNaN(date.getTime())
      ? date.toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      : "-"
  }
</time>
