---
interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
---

<div class="rss-buttons flex gap-2">
  <a 
    href={lang === "es" ? "/rss.xml" : "/en/rss.xml"} 
    class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-orange-600 bg-orange-50 border border-orange-200 rounded-lg hover:bg-orange-100 transition-colors"
    title={lang === "es" ? "RSS Feed en EspaÃ±ol" : "RSS Feed in English"}
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
      <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z"/>
      <path d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1z"/>
      <path d="M3 15a2 2 0 114 0 2 2 0 01-4 0z"/>
    </svg>
    RSS
  </a>
  
  <a 
    href="/feed.xml" 
    class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-blue-600 bg-blue-50 border border-blue-200 rounded-lg hover:bg-blue-100 transition-colors"
    title={lang === "es" ? "RSS Feed Combinado" : "Combined RSS Feed"}
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
      <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z"/>
      <path d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1z"/>
      <path d="M3 15a2 2 0 114 0 2 2 0 01-4 0z"/>
    </svg>
    {lang === "es" ? "Todos" : "All"}
  </a>
</div>
