---
import BlogCardGrid from "./BlogCardGrid.astro";
import BlogCardList from "./BlogCardList.astro";
interface Props {
  post: any;
  variant?: "grid" | "list";
  lang: string;
  index: number;
}
const { post, variant = "grid", lang, index } = Astro.props;
---

{
  variant === "grid" ? (
    <BlogCardGrid post={post} lang={lang} index={index} />
  ) : (
    <BlogCardList post={post} lang={lang} index={index} />
  )
}
