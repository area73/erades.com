---
interface Props {
  condition: boolean;
}
const { condition } = Astro.props;

// Use named slots instead of string processing
const hasThenSlot = Astro.slots.has("then");
const hasElseSlot = Astro.slots.has("else");
---

{condition && hasThenSlot && <slot name="then" />}
{!condition && hasElseSlot && <slot name="else" />}
